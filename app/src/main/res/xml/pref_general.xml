<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ListPreference
        android:title="@string/pref_sort_title"
        android:key="@string/pref_sort_key"
        android:defaultValue="@string/pref_sort_default_value"
        android:entries="@array/pref_sort_options"
        android:entryValues="@array/pref_sort_values"
        android:dialogTitle="@string/pref_sort_dialog_title"
        android:summary="%s"/>


</PreferenceScreen>
