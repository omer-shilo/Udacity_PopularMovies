<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_movies"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.shilo.omer.popularmovies.MovieDetailActivityFragment"
    tools:showIn="@layout/activity_movie_detail">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_movie_title"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/movie_detail_layout_margin"
        android:background="#009688"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearlayout_text_movies"
        android:layout_below="@+id/textview_movie_title">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/imageview_movie_poster"
            android:layout_weight="1"
            android:layout_margin="@dimen/movie_detail_layout_margin" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:columnCount="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/release_date_title"
                android:layout_marginBottom="@dimen/movie_detail_buttom_margin"/>
            <TextView
                android:id="@+id/textview_movie_release_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/movie_detail_line_separator" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_rating_title"
                android:layout_marginBottom="@dimen/movie_detail_buttom_margin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textview_movie_user_rating"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_movie_description"
        android:layout_below="@+id/linearlayout_text_movies"
        android:layout_marginLeft="0dp"
        android:padding="@dimen/movie_detail_layout_margin"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/textview_movie_description"/>
</RelativeLayout>
